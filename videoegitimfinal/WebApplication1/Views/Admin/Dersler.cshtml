
@{
    ViewData["Title"] = "Dersler";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}
@model List<VideoViewModel>

<div class="container">
    <div class="row" style="margin-bottom:3%">
        <div class="col-md-4 offset-9">
            <a class="btn btn-success" asp-action="DersEkle" asp-controller="Admin"> Ders Ekle</a>
        </div>
    </div>
    <div class="row mt-10">
        <div class="col-md-12">
            <table class="table table-hover" id="habertable">
                <thead>
                    <tr>
                        <th>Sıra No</th>
                        <th>Ders Adı </th>
                        <th>Ders Açıklama </th>
                        <th>İşlemler</th>
                    </tr>

                </thead>
                <tbody>
                    @{
                        int i = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.Name</td>
                            <td>@item.Description</td>

                            <td>
                                <a asp-action="DersGuncelle" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-dark">Düzenle</a>
                                <a asp-action="DersSil" asp-controller="Admin" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>

                            </td>
                        </tr>
                        i = i + 1;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
