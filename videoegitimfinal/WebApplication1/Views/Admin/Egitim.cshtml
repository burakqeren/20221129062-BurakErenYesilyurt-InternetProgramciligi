
@{
    ViewData["Title"] = "Egitim";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}

<div class="row mt-10">
    <div class="col-md-12">
        <table class="table table-hover" id="egitimtable">
            <thead>
                <tr>
                    <td>Sıra No</td>
                    <td>Eğitim kategoriAdı Adı</td>
                    <td>İslemler</td>
                </tr>

            </thead>
            <tbody>
           
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card mb-4" style="margin-top:20px;">
            <div class="card-body">
                <div class="table">
                    <form>
                        <input type="hidden" name="id" id="id" />

                        <label>Yeni kategoriAdı Adı</label>
                        <input type="text" class="form-control" name="kategoriAdı" id="kategoriAdı" /><br />

                        <button class="btn btn-success">kategoriAdıyi Güncelle</button>
                        <button class="btn btn-danger">kategoriAdıyi Sil</button>

                        <button class="btn btn-info" id="ekleButton">Yeni kategoriAdı Ekle Ekle</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/site.js"></script>
}

