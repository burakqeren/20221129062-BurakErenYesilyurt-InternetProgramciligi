
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model UserModelView

<section class="p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="card border-light-subtle shadow-sm">
            <div class="row g-0">
                <div class="col-12 col-md-6">
                    <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="~/image/ogrenci.png" alt="BootstrapBrain Logo">
                </div>
                <div class="col-12 col-md-6">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <div class="row">
                            <div class="col-12">
                                <div class="mb-5">
                                    <h3>Öğrenci Giriş Sayfası </h3>
                                </div>
                            </div>
                        </div>
                        <form asp-action="Login" asp-controller="Home">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                            <div class="row gy-3 gy-md-4 overflow-hidden">
                                <div class="col-12">
                                    <label asp-for="UserName"></label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Password"></label>
                                    <input type="password" asp-for="Password" class="form-control" value="Abc.123" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        <label asp-for="RememberMe"></label>
                                        <input asp-for="RememberMe" class="form-check" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <input type="submit" value="Giriş" class="btn bsb-btn-xl btn btn-primary" />
                                        
                                       
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="row">
                            <div class="col-12">
                                <hr class="mt-5 mb-4 border-secondary-subtle">
                                <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-end">
                                    <a asp-action="Register" asp-controller="Home" class="btn btn-link">Kayıt Ol</a>
                                    <a asp-action="Login" asp-controller="Teachers" class="btn btn-link">Öğretmen Üye Portalına Giriş </a>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




