
@{
    Layout = null;
}
@model List<EgitimModelView>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - videoegitimfinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/videoegitimfinal.styles.css" asp-append-version="true" />

   
    


    <link rel="stylesheet" href="~/css/site.css" />

        
</head>
<body>
    <header>

        <style>
            
            .text-bg-dark {
                font-family: 'Montserrat', sans-serif;
                font-weight: 400; /* Kalınlık - Bold */
                font-style: normal; /* Eğiklik - İtalik */
                color: #1b1b1b;
            }

            /* Diğer stillendirmeleri de ekleyebilirsiniz */
            .Container {
                /* Container stilini buraya ekleyebilirsiniz */
            }

            /* ve diğer stillendirme kurallarını buraya ekleyebilirsiniz */
        


            .navbar {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
                background-color: #d0e6ff; /* Bebek mavisi renginin hex kodu */
               
            }
        </style>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Eğitim Portalı </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        

                       




                        @foreach(var x in Model)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="KategoriBul" asp-route-id="@x.Id">@x.KategoriAdı</a>
                            </li>
                          
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="contanct">İletişim</a>
                        </li>



                    </ul>
                    <div class="d-flex" role="search">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span style="margin-left:3%;">Hoşgeldin!  @User.Identity.Name</span>

                            <a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Home" asp-action="Logout">Çıkış Yap</a>
                        }
                        else
                        {
                            <a class="nav-link text-white btn btn-primary" style="margin-right:3%" asp-area="" asp-controller="Home" asp-action="Login">Giriş Yap</a>
                            <a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Home" asp-action="Register">Kayıt Ol</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
        <div class="container">
        <main role="main" class="pb-3">
            <div id="carouselExample" class="carousel slide">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/image/HALEEEM.jpg" class="d-block w-100" style="width:600px; height:600px;" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/image/coding2.jpg" class="d-block w-100" style="width:600px; height:600px;" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/image/coding3.jpg" class="d-block w-100" style="width:600px; height:600px;" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </main>
        </div>
    </header> 
    
    <div class="Container">
         <div class="col-md-12 text-center" style="text-align: center; padding: 20px; margin: auto; max-width: 1400px;">
          <br />  <h3 class="text-bg-dark">
                Günümüzde bilgiye erişim artık sadece klasik sınıf ortamında değil, aynı zamanda dijital platformlarda da mümkün. Bu noktada, öğrenmeyi daha etkili ve esnek hale getiren video eğitim portalları ön plana çıkıyor. Bu portallar, öğrencilere, profesyonellere ve meraklılara geniş bir konu yelpazesinde eğitim imkanı sunuyor. İşte bu yenilikçi eğitim yaklaşımını avantajlı hale getiren Halesta Video Eğitim Platformu Sizlerle!<br />
            </h3>
               
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

