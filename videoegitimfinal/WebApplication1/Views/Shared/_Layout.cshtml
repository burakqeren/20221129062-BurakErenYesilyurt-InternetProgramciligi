<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - videoegitimfinal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/videoegitimfinal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
       
        <style>
            .navbar {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Örnek değerler */
                background-color: #d0e6ff; /* Bebek mavisi renginin hex kodu */
            }
        </style>
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Eğitim Portalı </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index"> Anasyafa </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="contanct"> İletişim </a>
                        </li>
                    </ul>
                    <div class="d-flex" role="search">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span style="margin-left:3%;">Hoşgeldin!  @User.Identity.Name</span>

                            <a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Home" asp-action="Logout">Çıkış Yap</a>
                        }
                        else
                        {
                            <a class="nav-link text-white btn btn-primary" style="margin-right:3%" asp-area="" asp-controller="Home" asp-action="Login">Giriş Yap</a>
                            <a class="nav-link text-white btn btn-primary" asp-area="" asp-controller="Home" asp-action="Register">Kayıt Ol</a>
                        }

                       
                       
                          


                        
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - videoegitimfinal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
